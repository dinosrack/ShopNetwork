<Window x:Class="ShopNetwork.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopNetwork"
        mc:Ignorable="d"
        Title="Авторизация" WindowState="Maximized"
        MinWidth="1280" MinHeight="720">
    <Grid>
        <StackPanel Width="200" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <TextBlock Text="АВТОРИЗАЦИЯ"
                       FontSize="24"
                       FontWeight="Bold"
                       Height="35" 
                       HorizontalAlignment="Center"/>
            
            <Border Height="20"/>
            
            <TextBlock Height="35"
                       Text="Имя пользователя" 
                       FontSize="16"/>
            
            <TextBox x:Name="UserName" 
                     Height="35"
                     VerticalContentAlignment="Center"
                     FontSize="16"/>
            
            <Border Height="20"/>
            
            <TextBlock Text="Пароль"
                       FontSize="16"
                       Height="35"/>
            
            <PasswordBox x:Name="Password" 
                         Height="35"
                         VerticalContentAlignment="Center"
                         FontSize="16"/>
            
            <Border Height="20"/>
            
            <Button x:Name="LoginButton" 
                    FontSize="16" 
                    Height="35" 
                    Click="LoginButton_Click" 
                    Width="200" 
                    Content="Войти"/>
            
            <Border Height="20"/>
            
            <StackPanel HorizontalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" 
                           Text="Забыли пароль?" 
                           MouseDown="ForgotPassword_MouseDown" />
                
                <TextBlock HorizontalAlignment="Center" 
                           Text="Демонстрационная версия" 
                           TextDecorations="Underline" 
                           Foreground="#A0A0A0" 
                           MouseDown="DemoVersion_MouseDown"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
