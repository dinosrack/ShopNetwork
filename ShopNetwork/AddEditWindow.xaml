<Window x:Class="ShopNetwork.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopNetwork"
        mc:Ignorable="d"
        MinWidth="1280" MinHeight="720" WindowState="Maximized" Title="Добавление записи">
    <Grid>
        <StackPanel Width="500" VerticalAlignment="Center">
            <TextBlock Text="Новая запись" x:Name="Header" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Height="35"/>
            <TextBlock Text="Таблица" x:Name="TableName" FontSize="16" HorizontalAlignment="Center" Height="35"/>
            <Border Height="35"/>
            <StackPanel x:Name="MainArea" Width="200" HorizontalAlignment="Center">
                <!--Тут генерируются поля-->
            </StackPanel>
            <Border Height="35"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Height="35" x:Name="AddOrEditBtn" Width="200" Click="AddOrEditBtn_Click" FontSize="16" Content="Добавить"/>
                <Border Margin="10"/>
                <Button Height="35" x:Name="CancelBtn" Width="200" Click="CancelBtn_Click" FontSize="16" Content="Отмена"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>